<robot name="mybot">

	<!-- * * * Link Definitions * * * -->
	<link name="base">
		<visual>
			<origin xyz="0.25 0 0.35" 
				rpy="1.5708 0 1.5708"/>
			<geometry>
				<box size="0.5 0.75 0.5"/>
			</geometry>
	     		<material name="red">
				<color rgba="0.9 0 0 1.0"/>
			</material>
	       </visual>
  	</link>
 	<link name="right_rear_wheel">
		<visual>
			<origin xyz="0 0 0" 
				rpy="1.5708 0 1.5708"/>
			<geometry>
				<cylinder radius="0.15" 
					  length="0.01"/>
			</geometry>
	     		<material name="green">
				<color rgba="0 0.9 0.9 1.0"/>
			</material>
	   	</visual>
	</link>
	<link name="left_rear_wheel">
		<visual>
			<origin xyz="0 0 0" 
				rpy="1.5708 0 1.5708"/>
			<geometry>
				<cylinder radius="0.15"  
					  length="0.01"/>
			</geometry>
	     	<material name="green">
				<color rgba="0 0.9 0.9 1.0"/>
			</material>
	   </visual>
	</link>
	<link name="front_wheel">
		<visual>
			<origin xyz="0 0 0" 
				rpy="1.5708 0 1.5708"/>
			<geometry>
				<cylinder radius="0.15" 
					  length="0.01"/>
			</geometry>
	     		<material name="purple">
				<color rgba="0.9 0 0.9 1.0"/>
			</material>
	   	</visual>
	</link>
	
    <!-- * * * Joint Description * * * -->
 	<joint name="base_front" type="revolute">
    		<parent link="base"/>
    		<child link="front_wheel"/>
    		<origin xyz="0.5 0 0" 
			rpy="0 0 0"/>
       		<limit upper   = " 0.7 " 
		       lower   = "-0.7" 
		       effort  = " 1  " 
		       velocity= " 3  "/>
        	<axis xyz="0 0 1"/>
	</joint>
	<joint name="base_right_rear_wheel" type="continuous">
    		<parent link="base"/>
    		<child link="right_rear_wheel"/>
    		<origin xyz="0 0.3 0" 
			rpy="0 0 0"/>
       		<limit 
		       effort  = "1" 
		       velocity= "3"/>
        	<axis xyz="0 0 1"/>
	</joint>
	<joint name="base_left_rear_wheel" type="continuous">
    		<parent link="base"/>
    		<child link="left_rear_wheel"/>
    		<origin xyz="0 -0.3 0" 
			rpy="0 0 0"/>
       		<limit  
		       effort  = "1" 
		       velocity= "3"/>
        	<axis xyz="0 0 1"/>
	</joint>
    <gazebo>
    <plugin name="differential_drive_controller" filename="libdiffdrive_plugin.so">
      
    <!-- Plugin update rate in Hz -->
    <updateRate>10</updateRate>

    <!-- Name of left joint, defaults to `left_joint` -->
    <leftJoint>base_left_rear_wheel</leftJoint>

    <!-- Name of right joint, defaults to `right_joint` -->
    <rightJoint>base_right_rear_wheel</rightJoint>

    <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
    <wheelSeparation>0.6</wheelSeparation>

    <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
    <wheelDiameter>0.3</wheelDiameter>

    <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
    <wheelAcceleration>1.0</wheelAcceleration>

    <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
    <wheelTorque>20</wheelTorque>

    <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
    <commandTopic>cmd_vel</commandTopic>

    <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
    <odometryTopic>odom</odometryTopic>

    <!-- Odometry frame, defaults to `odom` -->
    <odometryFrame>odom</odometryFrame>

    <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
    <robotBaseFrame>base</robotBaseFrame>

    <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
    <odometrySource>1</odometrySource>

    <!-- Set to true to publish transforms for the wheel links, defaults to false -->
    <publishWheelTF>true</publishWheelTF>

    <!-- Set to true to publish transforms for the odometry, defaults to true -->
    <publishOdom>true</publishOdom>

    <!-- Set to true to publish sensor_msgs/JointState on /joint_states for the wheel joints, defaults to false -->
    <publishWheelJointState>true</publishWheelJointState>

    <!-- Set to true to swap right and left wheels, defaults to true -->
    <legacyMode>false</legacyMode>
    </plugin>
  </gazebo>
</robot>
